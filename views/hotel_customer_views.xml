<odoo>
    <record id="view_hotel_customer_tree" model="ir.ui.view">
        <field name="name">hotel.customer.tree</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="contact_info"/>
                <field name="booking_ids"/>
            </tree>
        </field>
    </record>

    <record id="view_hotel_customer_form" model="ir.ui.view">
        <field name="name">hotel.customer.form</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="contact_info"/>
                    <field name="booking_ids"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Action for Customers -->
    <record id="hotel_management_customer_action" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">hotel.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage your customers
            </p>
        </field>
    </record>
    
    <menuitem id="hotel_management_root" name="Hotel Management"/>

    <menuitem id="hotel_management_menu_customers" name="Customers" parent="hotel_management_root"/>

    <menuitem id="hotel_management_menu_customers_view" name="Manage Customers" parent="hotel_management_menu_customers" action="hotel_management_customer_action"/>
</odoo>
